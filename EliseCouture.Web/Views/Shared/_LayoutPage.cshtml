<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title - Amory Fitness</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Url.Content("~/css/bootstrap.css")" rel="stylesheet" media="screen">
        <link href="@Url.Content("~/css/style.css")" rel="stylesheet" media="screen">
        <link href="//fonts.googleapis.com/css?family=Josefin+Sans|Pacifico" rel="stylesheet" type="text/css">
        <style type="text/css">
            @@font-face {
	            font-family: "fontello";
                src: url("@Url.Content("~/font/fontello.ttf")");
	            font-weight: normal;
	            font-style: normal;
            }
        </style>
    </head>
    <body>
        <div id="header" style="">
            <div class="content">
                <div id="logo">
                    @Html.ActionLink("AMORY", "index", "home")
                    <br />
                    @Html.ActionLink("FITNESS", "index", "home")
                </div>
                    
                <div id="sections">
                    <ul class="unstyled inline">
                        <li>@Html.ActionLink("services", "index", "services")</li>
                        <li>@Html.ActionLink("blog", "index", "blog")</li>
                        <li>@Html.ActionLink("community", "index", "community")</li>
                        <li>@Html.ActionLink("contact", "index", "contact")</li>
                    </ul>
                </div>
            </div>
        </div>

        @RenderBody()
    
        <script src="//code.jquery.com/jquery.js"></script>
        <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-40141521-2', 'amoryfitness.com');
            ga('send', 'pageview');

        </script>
    </body>
</html>