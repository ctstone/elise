@{ 
    Layout = "_LayoutPage.cshtml";
}

<div style="background:#383838;">
    <div class="content" style="border:1px solid; border-width:0 0 1px 0;">
        <div style="padding:.5em .1em;color:white;font-size:2em;font-family:'Pacifico';background:url('img/Untitled.png') 0 10%;text-align:center;">
            @ViewBag.Title
        </div>
    </div>
</div>

<div style="background:#ccc; box-shadow: inset 0 3px 6px rgba(0,0,0,.2)">
    <div style="max-width:940px;margin:auto;">
        <div style="background:#eee;padding:1em;margin-bottom:2em;border-radius:0 0 5px 5px;padding-top:2em;">
            @RenderBody()
        </div>
    </div>
</div>