@{ 
    Layout = "_LayoutPage.cshtml";
    ViewBag.Image1 = ViewBag.Image1 ?? "/img/food/food-basket.jpg";
    ViewBag.Image2 = ViewBag.Image2 ?? "/img/food/water-bottle.jpg";
    ViewBag.Image3 = ViewBag.Image3 ?? "/img/food/green-heart.jpg";
    ViewBag.Image4 = ViewBag.Image4 ?? "/img/food/breakfast.jpg";
    ViewBag.Image5 = ViewBag.Image5 ?? "/img/food/tea.jpg";
}

<div style="background:#383838;">
    <div style="max-width:940px;margin:auto;">
        <div class="masthead small">
            <div class="imgs">
                <div class="img" style="background-image:url('@ViewBag.Image1');"></div>
                <div class="img c2" style="background-image:url('@ViewBag.Image2');"></div>
                <div class="img c3" style="background-image:url('@ViewBag.Image3');"></div>
                <div class="img c4" style="background-image:url('@ViewBag.Image4');"></div>
                <div class="img c5" style="background-image:url('@ViewBag.Image5');"></div>
            </div>
        </div>
    </div>
</div>

<div style="background:#ccc; box-shadow: inset 0 3px 6px rgba(0,0,0,.2)">
    <div style="max-width:940px;margin:auto;">
        <div style="background:#eee;padding:1em;margin-bottom:2em;border-radius:0 0 5px 5px;padding-top:2em;">
            @RenderBody()
        </div>
    </div>
</div>