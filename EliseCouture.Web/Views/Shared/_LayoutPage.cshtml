<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title | Elise Couture</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
        <style type="text/css">
        #my-thumbs img {
          margin-bottom:1px;
        }
        a { color: #2B4E72; }
        body { background:#ccc; }
    
        .masthead {
            /*height:350px;*/
            position:relative;
            padding-bottom:40%;
            overflow:hidden;
        }
        .masthead .imgs {
            position:absolute;
            left:0;right:0;
            top:0;bottom:0;
        }
        .masthead .img {
            width:20%;
            height:50%;
            background-size: 100% 100%;
            position:absolute;
        }
        .masthead .img.c2 {
            left:20%;
            width:40%;
            height:100%;
        }
        .masthead .img.c3 {
            left:60%;
        }
        .masthead .img.c4 {
            left:80%;
        }
        .masthead .img.r2 {
            top:50%;
        }

        .masthead.small {
            padding-bottom:20%;
        }
        .masthead.small .img {
            height:100%;
            width:20%;
        }
        .masthead.small .img.c2 {
            left:20%;
        }
        .masthead.small .img.c3 {
            left:40%;
        }
        .masthead.small .img.c4 {
            left:60%;
        }
        .masthead.small .img.c5 {
            left:80%;
        }
        </style>
    </head>
    <body>
        <div style="padding:1em 0 .5em 0;background:#B1C27E;font-size:1.3em;border:solid black; border-width:0 0 1px 0; box-shadow: inset 0 -3px 6px rgba(0,0,0,.2)">
            <div style="max-width:940px;margin:auto;">
                <div class="row-fluid" >
                    <div class="span8">
                        <ul class="unstyled inline" style="margin:0;">
                            <li style="padding-left:0;">@Html.ActionLink("about", "index", "home")</li>
                            <li><a href="#">@Html.ActionLink("services", "index", "services")</a></li>
                            <li><a href="#">@Html.ActionLink("blog", "index", "blog")</a></li>
                            <li><a href="#">@Html.ActionLink("community", "index", "community")</a></li>
                        </ul>
                    </div>
                    <div class="span4" style="text-align:right;font-size:1.5em;">AMORY FITNESS</div>
                </div>
            </div>
        </div>

        @RenderBody()
    
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/holder.js"></script>
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-40141521-1', 'elisecouture.com');
            ga('send', 'pageview');
        </script>
    </body>
</html>