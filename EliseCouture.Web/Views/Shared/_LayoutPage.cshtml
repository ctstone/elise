<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title - Amory Fitness</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/bootstrap.css" rel="stylesheet" media="screen">
        <link href="/css/style.css" rel="stylesheet" media="screen">
        <link href="http://fonts.googleapis.com/css?family=Josefin+Sans|Pacifico" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div style="padding:1em 0 .5em 0;background:#B1C27E;font-size:1.3em;border:solid black; border-width:0 0 1px 0; box-shadow: inset 0 -3px 6px rgba(0,0,0,.2)">
            <div style="max-width:940px;margin:auto;">
                <div id="logo" style="line-height:40px;font-size:3em;color:#eee;font-family: 'Josefin Sans', sans-serif;">
                    <a href="/">AMORY<br />FITNESS</a>
                </div>
                    
                <div style="text-align:right;">
                    <ul class="unstyled inline" style="margin:0;">
                        <li>@Html.ActionLink("services", "index", "services")</li>
                        <li>@Html.ActionLink("blog", "index", "blog")</li>
                        <li>@Html.ActionLink("community", "index", "community")</li>
                        <li>@Html.ActionLink("contact", "index", "contact")</li>
                    </ul>
                </div>
            </div>
        </div>

        @RenderBody()
    
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-40141521-1', 'elisecouture.com');
            ga('send', 'pageview');
        </script>
    </body>
</html>